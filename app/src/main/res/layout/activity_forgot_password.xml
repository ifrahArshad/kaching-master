<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_marginTop="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="start"
        android:textColor="@color/textColorPrimary"
        android:textSize="36sp"/>
    <EditText
        android:id="@+id/forgot_email_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:fontFamily="@font/sf_ui_display_normal"
        android:hint="Enter Your Email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="@color/textHintColor"
        android:textColorLink="@color/textHintColor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/forgot_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/button_primary"
            android:gravity="center"
            android:text="@string/sign_up_button_text"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/forgot_button_overlay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/button_primary_pressed"
            android:gravity="center"
            android:text="@string/sign_up_button_text"
            android:textColor="@color/textColorInvert"
            android:textSize="20sp"
            android:visibility="invisible" />
        <Button
            android:id="@+id/forgot_button_overlay_overlay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/button_primary"
            android:gravity="center"
            android:text="@string/sign_up_button_text"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            android:visibility="invisible" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/forgot_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="invisible" />
</LinearLayout>